{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:1234",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "breakOnLoad": true,
            "sourceMapPathOverrides": {
                "../*": "${webRoot}/*"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=/temp"
            ]
        }
    ]
}